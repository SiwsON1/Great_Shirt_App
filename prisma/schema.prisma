model Product {
  id         String     @id @default(uuid())
  name       String     @unique
  price      Int
  rating     Int
  image      String
  imageTop   String
  imageBottom String
  imageLeft  String
  imageRight String
  description String
  type       String
  color      String
  material   String
  brand      String
  orderItems OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}



model Order {
  orderId    String      @id @unique @default(uuid())
  amount     Int
  email      String
  name       String
  address    String
  payment    String
  delivery   String
  orderItems OrderItem[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model OrderItem {
  id         String  @id @default(uuid())
  quantity   Int
  order      Order   @relation(fields: [orderId], references: [orderId])
  orderId    String
  product    Product @relation(fields: [productId], references: [id])
  productId  String

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}